{
    "name": "checklet",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "cp .env.dev .env.local && next dev",
        "build": "cp .env.prod .env.local && next build",
        "build-checklet": "cp .env.prod .env.local && docker build -t splacorn/checklet . --platform linux/amd64 && docker push splacorn/checklet",
        "build-nginx": "docker build -t splacorn/checklet-nginx:latest -f deploy/nginx/Dockerfile deploy/nginx --platform linux/amd64 && docker push splacorn/checklet-nginx",
        "build-redis": "docker build -t splacorn/checklet-redis:latest -f deploy/redis/Dockerfile deploy/redis --platform linux/amd64 && docker push splacorn/checklet-redis",
        "send-docker-compose": "scp -i ~/.ssh/Transistor2.pem deploy/docker-compose.yml ubuntu@ec2-44-211-156-229.compute-1.amazonaws.com:/home/ubuntu/",
        "send-env": "scp -i ~/.ssh/Transistor2.pem deploy/.env ubuntu@ec2-44-211-156-229.compute-1.amazonaws.com:/home/ubuntu/",
        "deploy-all": "yarn build-checklet && yarn build-nginx && yarn build-redis && yarn send-all",
        "send-all": "yarn send-docker-compose && yarn send-env",
        "start": "next start",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
        "redis": "docker run -d -p 6379:6379 -p 8001:8001 redis/redis-stack:latest",
        "pull-backup": "ssh -i ~/.ssh/Transistor2.pem ubuntu@ec2-44-211-156-229.compute-1.amazonaws.com 'sudo tar -czf - /home/ubuntu/redis' > ./redis_backups/$(date +\"%Y-%m-%d_%H-%M-%S\").tar.gz"
    },
    "dependencies": {
        "@types/mixpanel": "^2.14.8",
        "antd": "^5.12.2",
        "firebase": "^10.7.1",
        "firebase-admin": "^11.11.1",
        "firebaseui": "^6.1.0",
        "lodash.debounce": "^4.0.8",
        "mixpanel": "^0.18.0",
        "mixpanel-browser": "^2.48.1",
        "next": "14.0.4",
        "openai": "^4.20.1",
        "prettier": "^3.1.1",
        "react": "^18",
        "react-dom": "^18",
        "react-markdown": "^9.0.1",
        "react-toastify": "^9.1.3",
        "redis": "^4.6.11",
        "remark-gfm": "^4.0.0",
        "rich-textarea": "^0.24.4"
    },
    "devDependencies": {
        "@types/lodash.debounce": "^4.0.9",
        "@types/mixpanel-browser": "^2.47.5",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/react-toastify": "^4.1.0",
        "autoprefixer": "^10.0.1",
        "eslint": "^8",
        "eslint-config-next": "14.0.4",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
